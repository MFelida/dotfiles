# Ghostty Config File

shell-integration=bash
env = NERD_FONT_ENABLED=""
mouse-hide-while-typing = true

# Keybinds
keybind = ctrl+a>c=new_tab
keybind = ctrl+a>x=close_tab
keybind = ctrl+a>n=next_tab

keybind = ctrl+a>shift+|=new_split:right
keybind = ctrl+a>-=new_split:down
keybind = ctrl+a>z=toggle_split_zoom
keybind = ctrl+a>==equalize_splits

keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:down
keybind = alt+k=goto_split:up
keybind = alt+l=goto_split:right

# Cosmetic
theme = Gruvbox Dark
font-family = MesloLGS Nerd Font Mono
custom-shader = ~/.config/ghostty/cursor_smear.glsl

window-decoration = none

background-opacity = 0.95
background-blur = true

split-divider-color = 26A269
unfocused-split-opacity = 0.40
window-inherit-working-directory = true
